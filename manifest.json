{
  "manifest_version": 3,
  "name": "ESPOILER Blocker",
  "description": "Oculta información de partidos en los highlights subidos en YouTube por la cuenta ESPN Fans.",
  "version": "1.0.1",
  "author": "originalnicodr",
  "icons": {
    "16": "images/logo/icon16.png",
    "48": "images/logo/icon48.png",
    "128": "images/logo/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["football-logos/**", "images/**"],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/logo/icon16.png",
      "24": "images/logo/icon48.png",
      "32": "images/logo/icon128.png"
    },
    "default_title": "Configuración",
    "default_popup": "html/menu.html"
  },
  "permissions": ["storage"]
}
